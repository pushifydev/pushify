{% extends 'base.html.twig' %}

{% block title %}Sign In - Pushify{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4">
	<div class="w-full max-w-md">
		<!-- Logo -->
		<div class="text-center mb-8">
			<a href="{{ path('app_home') }}" class="text-3xl font-bold text-white">Pushify</a>
			<p class="text-gray-400 mt-2">Welcome back</p>
		</div>

		<!-- Login Card -->
		<div class="bg-gray-800/50 border border-gray-700/50 rounded-2xl p-8">
			{% if error %}
				<div class="mb-6 p-4 bg-red-500/10 border border-red-500/50 rounded-lg">
					<p class="text-red-500 text-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
				</div>
			{% endif %}

			<form method="post" class="space-y-6">
				<!-- Email Field -->
				<div>
					<label for="username" class="block text-sm font-medium text-gray-300 mb-2">Email Address</label>
					<input type="email"
						   id="username"
						   name="_username"
						   value="{{ last_username }}"
						   required
						   autofocus
						   autocomplete="email"
						   placeholder="you@example.com"
						   class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary">
				</div>

				<!-- Password Field -->
				<div>
					<div class="flex items-center justify-between mb-2">
						<label for="password" class="block text-sm font-medium text-gray-300">Password</label>
						<a href="#" class="text-sm text-primary hover:text-primary/80">Forgot password?</a>
					</div>
					<input type="password"
						   id="password"
						   name="_password"
						   required
						   autocomplete="current-password"
						   placeholder="Enter your password"
						   class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary">
				</div>

				<!-- Remember Me -->
				<div class="flex items-center">
					<input type="checkbox"
						   id="remember_me"
						   name="_remember_me"
						   class="w-4 h-4 text-primary bg-gray-800 border-gray-700 rounded focus:ring-primary focus:ring-offset-gray-900">
					<label for="remember_me" class="ml-2 text-sm text-gray-400">Remember me for 7 days</label>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<!-- Submit Button -->
				<button type="submit" class="w-full py-3 px-4 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all hover:scale-[1.02]">
					Sign In
				</button>
			</form>

			<!-- Divider -->
			<div class="relative my-6">
				<div class="absolute inset-0 flex items-center">
					<div class="w-full border-t border-gray-700"></div>
				</div>
				<div class="relative flex justify-center text-sm">
					<span class="px-4 bg-gray-800/50 text-gray-500">or continue with</span>
				</div>
			</div>

			<!-- Social Login Buttons -->
			<div class="space-y-3">
				<a href="{{ path('connect_github_start') }}" class="flex items-center justify-center gap-2 py-3 px-4 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors w-full">
					<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					Continue with GitHub
				</a>
			</div>
		</div>

		<!-- Register Link -->
		<p class="text-center mt-6 text-gray-400">
			Don't have an account?
			<a href="{{ path('app_register') }}" class="text-primary hover:text-primary/80 font-medium">Create one</a>
		</p>
	</div>
</div>
{% endblock %}
