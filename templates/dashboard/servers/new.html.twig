{% extends 'dashboard/base.html.twig' %}

{% block title %}Add Server - Pushify
{% endblock %}
{% block page_title %}Add Server
{% endblock %}
{% block page_subtitle %}Connect a new server for deployments
{% endblock %}

{% block topbar_actions %}
	<a href="{{ path('app_servers') }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
		<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
		</svg>
		Back
	</a>
{% endblock %}

{% block content %}
	<div
		class="max-w-4xl space-y-6">
		<!-- Hetzner Cloud Option -->
		<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
			<div class="flex items-center gap-4 mb-6">
				<div class="w-12 h-12 bg-red-500/20 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-red-400" viewbox="0 0 24 24" fill="currentColor">
						<path d="M12 0L1.5 6v12L12 24l10.5-6V6L12 0zm0 2.25l8.25 4.75v9.5L12 21.25l-8.25-4.75v-9.5L12 2.25z"/>
					</svg>
				</div>
				<div>
					<h3 class="text-lg font-semibold text-white">Cloud</h3>
					<p class="text-sm text-gray-400">Create a new server automatically</p>
				</div>
			</div>

			{% if hetznerConnected %}
				{% if subscribedServerType %}
				<div class="mb-4 p-4 bg-blue-500/10 border border-blue-500/30 rounded-lg">
					<div class="flex items-start gap-3">
						<svg class="w-5 h-5 text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<div>
							<p class="text-sm font-medium text-blue-300">Your subscription includes <span class="font-bold text-blue-200">{{ subscribedServerType|upper }}</span> servers</p>
							<p class="text-xs text-blue-400 mt-1">You can only create servers of this type with your current subscription.</p>
						</div>
					</div>
				</div>
				{% endif %}

				<form method="post" class="space-y-4">
					<input type="hidden" name="type" value="hetzner">

					<div class="grid grid-cols-2 gap-4">
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">Server Name</label>
							<input type="text" name="name" required placeholder="my-server" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">Server Type</label>
							<select name="server_type" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
								{% for type in hetznerOptions.serverTypes|default([]) %}
									{% set isSubscribed = subscribedServerType == type.name %}
									{% set isDisabled = subscribedServerType and not isSubscribed %}
									<option
										value="{{ type.name }}"
										{{ isSubscribed ? 'selected' : '' }}
										{{ isDisabled ? 'disabled' : '' }}
									>
										{{ type.name }}
										-
										{{ type.cores }}
										CPU,
										{{ type.memory }}GB RAM,
										{{ type.disk }}GB SSD
										{% if isSubscribed %}
											(Your Plan)
										{% elseif isDisabled %}
											(Not Available)
										{% endif %}
									</option>
								{% endfor %}
							</select>
							{% if subscribedServerType %}
							<p class="text-xs text-gray-500 mt-1">Only {{ subscribedServerType|upper }} servers are available with your subscription</p>
							{% endif %}
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">Location</label>
							<select name="location" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
								{% for loc in hetznerOptions.locations|default([]) %}
									<option value="{{ loc.name }}" {{ loc.name == 'nbg1' ? 'selected' : '' }}>
										{{ loc.city }},
										{{ loc.country }}
										({{ loc.name }})
									</option>
								{% endfor %}
							</select>
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">Operating System</label>
							<select name="image" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
								{% for img in hetznerOptions.images|default([]) %}
									<option value="{{ img.name }}" {{ img.name == 'ubuntu-22.04' ? 'selected' : '' }}>
										{{ img.description }}
									</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<button type="submit" class="w-full px-6 py-3 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg transition-all">
						Create Server
					</button>
				</form>
			{% else %}
				<div class="p-4 bg-gray-900/50 rounded-lg">
					<p class="text-gray-400">
						Cloud Server integration is not configured. Please contact administrator.
					</p>
				</div>
			{% endif %}
		</div>

		<div class="text-center text-gray-500">or</div>

		<!-- Manual Server Option -->
		<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
			<div class="flex items-center gap-4 mb-6">
				<div class="w-12 h-12 bg-gray-700/50 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"></path>
					</svg>
				</div>
				<div>
					<h3 class="text-lg font-semibold text-white">Connect Existing Server</h3>
					<p class="text-sm text-gray-400">Add your own server via SSH</p>
				</div>
			</div>

			<form method="post" class="space-y-4">
				<input type="hidden" name="type" value="manual">

				<div class="grid grid-cols-2 gap-4">
					<div>
						<label class="block text-sm font-medium text-gray-300 mb-2">Server Name</label>
						<input type="text" name="name" required placeholder="production-server" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-300 mb-2">Provider</label>
						<select name="provider" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
							{% for label, value in providers %}
								<option value="{{ value }}">{{ label }}</option>
							{% endfor %}
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-300 mb-2">IP Address</label>
						<input type="text" name="ip_address" required placeholder="123.45.67.89" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white font-mono focus:outline-none focus:border-primary">
					</div>
					<div class="grid grid-cols-2 gap-4">
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">SSH Port</label>
							<input type="number" name="ssh_port" value="22" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
						</div>
						<div>
							<label class="block text-sm font-medium text-gray-300 mb-2">SSH User</label>
							<input type="text" name="ssh_user" value="root" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
						</div>
					</div>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-300 mb-2">SSH Private Key</label>
					<textarea name="ssh_private_key" rows="6" required placeholder="-----BEGIN OPENSSH PRIVATE KEY-----&#10;...&#10;-----END OPENSSH PRIVATE KEY-----" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white font-mono text-sm focus:outline-none focus:border-primary"></textarea>
				</div>

				{% if publicKey is defined %}
					<div class="p-4 bg-gray-900/50 rounded-lg">
						<label class="block text-sm font-medium text-gray-300 mb-2">Or add this public key to your server:</label>
						<div class="flex gap-2">
							<input type="text" readonly value="{{ publicKey }}" id="public-key" class="flex-1 px-3 py-2 bg-gray-800 border border-gray-700 rounded-lg text-gray-400 font-mono text-xs">
							<button type="button" onclick="navigator.clipboard.writeText(document.getElementById('public-key').value)" class="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg">Copy</button>
						</div>
						<p class="text-xs text-gray-500 mt-2">Add this to
							<code>~/.ssh/authorized_keys</code>
							on your server</p>
					</div>
				{% endif %}

				<button type="submit" class="w-full px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all">
					Connect Server
				</button>
			</form>
		</div>
	</div>
{% endblock %}
