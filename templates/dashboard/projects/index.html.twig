									</svg>
								{% endif %}
							</div>

							<div>
								<h3 class="text-lg font-semibold text-white group-hover:text-primary transition-colors">{{ project.name }}</h3>
								<p class="text-sm text-gray-400 mt-1">{{ project.repositoryName ?? 'No repository connected' }}</p>
								{% if project.productionUrl %}
									<p class="text-xs text-gray-500 mt-2">{{ project.productionUrl }}</p>
								{% endif %}
							</div>
						</div>

						<div
							class="flex items-center gap-4">
							<!-- Status Badge -->
							<span class="px-3 py-1 rounded-full text-xs font-medium {{ project.statusBadgeClass }}">
								{{ project.status|capitalize }}
							</span>

							<!-- Last deployed -->
							{% if project.lastDeployedAt %}
								<span class="text-sm text-gray-500">{{ project.lastDeployedAt|date('M d, H:i') }}</span>
							{% endif %}

							<svg class="w-5 h-5 text-gray-600 group-hover:text-gray-400 transition-colors" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</div>
					</div>
				</a>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}
