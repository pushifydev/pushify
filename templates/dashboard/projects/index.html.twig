{% extends 'dashboard/base.html.twig' %}

{% block title %}Projects - Pushify
{% endblock %}
{% block page_title %}Projects
{% endblock %}
{% block page_subtitle %}Manage your deployed applications
{% endblock %}

{% block topbar_actions %}
	<a href="{{ path('app_project_new') }}" class="px-4 py-2 bg-primary hover:bg-primary/90 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
		<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
		</svg>
		New Project
	</a>
{% endblock %}

{% block content %}
	{% if projects is empty %}
		<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
			<div class="p-12 text-center">
				<div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gray-700/30 flex items-center justify-center">
					<svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
					</svg>
				</div>
				<h3 class="text-xl font-semibold text-white mb-2">No projects yet</h3>
				<p class="text-gray-400 mb-8 max-w-md mx-auto">Create your first project to start deploying applications.</p>
				<a href="{{ path('app_project_new') }}" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
					</svg>
					New Project
				</a>
			</div>
		</div>
	{% else %}
		<div class="grid gap-4">
			{% for project in projects %}
				<a href="{{ path('app_project_show', {slug: project.slug}) }}" class="block bg-gray-800/50 border border-gray-700/50 rounded-xl p-6 hover:bg-gray-800/70 hover:border-gray-600/50 transition-all group">
					<div class="flex items-start justify-between">
						<div
