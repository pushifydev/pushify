{% extends 'dashboard/base.html.twig' %}

{% block title %}New Project - Pushify{% endblock %}
{% block page_title %}New Project{% endblock %}
{% block page_subtitle %}Import a Git repository to deploy{% endblock %}

{% block content %}
<div class="max-w-4xl">
	{% if not hasGithubToken %}
	<!-- Connect GitHub prompt -->
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-8 text-center">
		<div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gray-700/30 flex items-center justify-center">
			<svg class="w-8 h-8 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
				<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
			</svg>
		</div>
		<h3 class="text-xl font-semibold text-white mb-2">Connect your GitHub account</h3>
		<p class="text-gray-400 mb-6">To import a repository, you need to connect your GitHub account first.</p>
		<a href="{{ path('connect_github_start') }}" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
			<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
				<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
			</svg>
			Connect GitHub
		</a>
	</div>
	{% else %}
	<!-- Search repositories -->
	<div class="mb-6">
		<div class="relative">
			<svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
			</svg>
			<input type="text"
				   id="repo-search"
				   placeholder="Search repositories..."
				   class="w-full pl-12 pr-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary">
		</div>
	</div>

	<!-- Repository list -->
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
		<div class="p-4 border-b border-gray-700/50">
			<h3 class="font-semibold text-white">Select a Repository</h3>
			<p class="text-sm text-gray-400 mt-1">Choose a repository to import and deploy</p>
		</div>

		<div class="divide-y divide-gray-700/50 max-h-[500px] overflow-y-auto" id="repo-list">
			{% if repositories is empty %}
			<div class="p-8 text-center text-gray-400">
				No repositories found. Make sure your GitHub account has access to repositories.
			</div>
			{% else %}
				{% for repo in repositories %}
				<a href="{{ path('app_project_configure', {repo: repo.full_name}) }}"
				   class="flex items-center justify-between p-4 hover:bg-gray-700/30 transition-colors repo-item"
				   data-name="{{ repo.name|lower }}"
				   data-full-name="{{ repo.full_name|lower }}">
					<div class="flex items-center gap-4">
						<div class="w-10 h-10 rounded-lg bg-gray-700/50 flex items-center justify-center">
							{% if repo.private %}
							<svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
							</svg>
							{% else %}
							<svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
							</svg>
							{% endif %}
						</div>
						<div>
							<h4 class="font-medium text-white">{{ repo.name }}</h4>
							<p class="text-sm text-gray-400">{{ repo.full_name }}</p>
						</div>
					</div>
					<div class="flex items-center gap-4">
						<span class="text-sm text-gray-500">{{ repo.updated_at|date('M d, Y') }}</span>
						<span class="px-3 py-1 bg-primary/20 text-primary text-sm font-medium rounded-lg">Import</span>
					</div>
				</a>
				{% endfor %}
			{% endif %}
		</div>
	</div>
	{% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
	const searchInput = document.getElementById('repo-search');
	const repoItems = document.querySelectorAll('.repo-item');

	if (searchInput) {
		searchInput.addEventListener('input', function(e) {
			const searchTerm = e.target.value.toLowerCase();

			repoItems.forEach(item => {
				const name = item.dataset.name;
				const fullName = item.dataset.fullName;

				if (name.includes(searchTerm) || fullName.includes(searchTerm)) {
					item.style.display = 'flex';
				} else {
					item.style.display = 'none';
				}
			});
		});
	}
});
</script>
{% endblock %}
