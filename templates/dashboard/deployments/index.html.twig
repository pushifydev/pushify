{% extends 'dashboard/base.html.twig' %}

{% block title %}Deployments - Pushify{% endblock %}
{% block page_title %}Deployments{% endblock %}
{% block page_subtitle %}View your deployment history{% endblock %}

{% block content %}
{% if deployments is empty %}
<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
	<div class="p-12 text-center">
		<div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-indigo-500/20 flex items-center justify-center">
			<svg class="w-10 h-10 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
			</svg>
		</div>
		<h3 class="text-xl font-semibold text-white mb-2">No deployments yet</h3>
		<p class="text-gray-400 mb-8 max-w-md mx-auto">Your deployment history will appear here once you start deploying projects.</p>
		<a href="{{ path('app_project_new') }}" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
			Create a Project
		</a>
	</div>
</div>
{% else %}
<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
	<div class="divide-y divide-gray-700/50">
		{% for deployment in deployments %}
		<a href="{{ path('app_deployment_show', {slug: deployment.project.slug, id: deployment.id}) }}"
		   class="flex items-center justify-between p-4 hover:bg-gray-700/30 transition-colors group">
			<div class="flex items-center gap-4">
				<!-- Status Icon -->
				<div class="w-10 h-10 rounded-lg flex items-center justify-center {{ deployment.statusBadgeClass }}">
					{% if deployment.status == 'success' %}
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
					</svg>
					{% elseif deployment.isRunning %}
					<svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
					</svg>
					{% elseif deployment.status == 'failed' %}
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
					{% else %}
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					{% endif %}
				</div>

				<div>
					<div class="flex items-center gap-2">
						<span class="font-medium text-white">{{ deployment.project.name }}</span>
						<span class="px-2 py-0.5 rounded text-xs {{ deployment.statusBadgeClass }}">{{ deployment.status|capitalize }}</span>
					</div>
					<div class="flex items-center gap-3 text-sm text-gray-400 mt-1">
						<span class="font-mono">{{ deployment.shortCommitHash ?? 'No commit' }}</span>
						<span>{{ deployment.branch }}</span>
						<span>{{ deployment.trigger|capitalize }}</span>
					</div>
				</div>
			</div>

			<div class="flex items-center gap-4">
				{% if deployment.totalDuration %}
				<span class="text-sm text-gray-500">{{ deployment.totalDuration }}s</span>
				{% endif %}
				<span class="text-sm text-gray-500">{{ deployment.createdAt|date('M d, H:i') }}</span>
				<svg class="w-5 h-5 text-gray-600 group-hover:text-gray-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
				</svg>
			</div>
		</a>
		{% endfor %}
	</div>
</div>
{% endif %}
{% endblock %}
