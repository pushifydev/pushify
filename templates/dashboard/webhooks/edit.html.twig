{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit Webhook - Pushify{% endblock %}
{% block page_title %}Edit Webhook{% endblock %}
{% block page_subtitle %}{{ webhook.name }}{% endblock %}

{% block topbar_actions %}
<a href="{{ path('app_webhooks_manage') }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to Webhooks
</a>
{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <form method="post" class="space-y-6">
        <!-- Stats -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
            <div class="grid grid-cols-4 gap-4 text-center">
                <div>
                    <p class="text-2xl font-bold text-white">{{ webhook.successCount }}</p>
                    <p class="text-sm text-gray-400">Successful</p>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ webhook.failureCount }}</p>
                    <p class="text-sm text-gray-400">Failed</p>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ webhook.lastResponseCode ?? '-' }}</p>
                    <p class="text-sm text-gray-400">Last Status</p>
                </div>
                <div>
                    <p class="text-sm font-medium text-white">
                        {% if webhook.lastTriggeredAt %}
                            {{ webhook.lastTriggeredAt|date('M d, H:i') }}
                        {% else %}
                            Never
                        {% endif %}
                    </p>
                    <p class="text-sm text-gray-400">Last Triggered</p>
                </div>
            </div>
            {% if webhook.lastError %}
            <div class="mt-4 p-3 bg-red-500/10 border border-red-500/30 rounded-lg">
                <p class="text-sm text-red-400">Last error: {{ webhook.lastError }}</p>
            </div>
            {% endif %}
        </div>

        <!-- Basic Info -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Basic Information</h3>

            <div class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Name *</label>
                    <input type="text" id="name" name="name" required
                           value="{{ webhook.name }}"
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
                </div>

                <div>
                    <label for="url" class="block text-sm font-medium text-gray-300 mb-1">Webhook URL *</label>
                    <input type="url" id="url" name="url" required
                           value="{{ webhook.url }}"
                           class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
                </div>

                <div>
                    <label for="preset" class="block text-sm font-medium text-gray-300 mb-1">Webhook Type</label>
                    <select id="preset" name="preset"
                            class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
                        <option value="custom" {{ webhook.preset == 'custom' ? 'selected' : '' }}>Custom Webhook</option>
                        <option value="slack" {{ webhook.preset == 'slack' ? 'selected' : '' }}>Slack</option>
                        <option value="discord" {{ webhook.preset == 'discord' ? 'selected' : '' }}>Discord</option>
                        <option value="teams" {{ webhook.preset == 'teams' ? 'selected' : '' }}>Microsoft Teams</option>
                    </select>
                </div>

                <div>
                    <label for="project_id" class="block text-sm font-medium text-gray-300 mb-1">Project</label>
                    <select id="project_id" name="project_id"
                            class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
                        <option value="">All Projects</option>
                        {% for project in projects %}
                        <option value="{{ project.id }}" {{ webhook.project and webhook.project.id == project.id ? 'selected' : '' }}>
                            {{ project.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="flex items-center gap-3">
                    <input type="checkbox" id="is_active" name="is_active" value="1"
                           {{ webhook.isActive ? 'checked' : '' }}
                           class="w-4 h-4 rounded bg-gray-800 border-gray-600 text-primary focus:ring-primary">
                    <label for="is_active" class="text-sm font-medium text-gray-300">Enable this webhook</label>
                </div>
            </div>
        </div>

        <!-- Events -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Events</h3>

            <div class="grid grid-cols-2 gap-3">
                {% for eventKey, eventLabel in events %}
                <label class="flex items-center gap-3 p-3 bg-gray-900/50 rounded-lg cursor-pointer hover:bg-gray-900 transition-colors">
                    <input type="checkbox" name="events[]" value="{{ eventKey }}"
                           {{ eventKey in webhook.events ? 'checked' : '' }}
                           class="w-4 h-4 rounded bg-gray-800 border-gray-600 text-primary focus:ring-primary">
                    <div>
                        <p class="text-sm font-medium text-white">{{ eventLabel }}</p>
                        <p class="text-xs text-gray-500">{{ eventKey }}</p>
                    </div>
                </label>
                {% endfor %}
            </div>
        </div>

        <!-- Security -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Security</h3>

            <div>
                <label for="secret" class="block text-sm font-medium text-gray-300 mb-1">Signing Secret</label>
                <input type="text" id="secret" name="secret"
                       value="{{ webhook.secret }}"
                       placeholder="Enter a secret key for signing payloads"
                       class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-primary">
                <p class="text-xs text-gray-500 mt-1">Leave empty to remove signing.</p>
            </div>
        </div>

        <!-- Submit -->
        <div class="flex justify-between">
            <form method="post" action="{{ path('app_webhook_delete', {id: webhook.id}) }}"
                  onsubmit="return confirm('Are you sure you want to delete this webhook?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-webhook-' ~ webhook.id) }}">
                <button type="submit" class="px-6 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 font-medium rounded-lg transition-colors">
                    Delete Webhook
                </button>
            </form>

            <div class="flex gap-3">
                <a href="{{ path('app_webhooks_manage') }}" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-colors">
                    Save Changes
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
