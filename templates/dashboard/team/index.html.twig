{% extends 'dashboard/base.html.twig' %}

{% block title %}Team - Pushify{% endblock %}
{% block page_title %}Team{% endblock %}
{% block page_subtitle %}Manage team members and permissions{% endblock %}

{% block content %}
<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
	<!-- Team Header -->
	<div class="flex items-center justify-between p-6 border-b border-gray-700/50">
		<h2 class="text-lg font-semibold text-white">Team Members</h2>
		<button class="px-4 py-2 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-lg transition-colors flex items-center gap-2">
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
			</svg>
			Invite Member
		</button>
	</div>

	<!-- Current User -->
	<div class="p-6">
		<div class="flex items-center gap-4 p-4 bg-gray-700/30 rounded-lg">
			<div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-white font-semibold text-lg">
				{{ app.user.name|slice(0, 1)|upper }}
			</div>
			<div class="flex-1">
				<p class="font-medium text-white">{{ app.user.name }}</p>
				<p class="text-sm text-gray-400">{{ app.user.email }}</p>
			</div>
			<span class="px-3 py-1 bg-primary/20 text-primary text-sm font-medium rounded-full">Owner</span>
		</div>
	</div>
</div>
{% endblock %}
