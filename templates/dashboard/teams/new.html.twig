{% extends 'dashboard/base.html.twig' %}

{% block title %}Create Team - Pushify{% endblock %}
{% block page_title %}Create Team{% endblock %}
{% block page_subtitle %}Start collaborating with others{% endblock %}

{% block topbar_actions %}
<a href="{{ path('app_teams') }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back
</a>
{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <form method="post" class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6 space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Team Name *</label>
            <input type="text" id="name" name="name" required autofocus
                   placeholder="My Awesome Team"
                   class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary">
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-300 mb-2">Description</label>
            <textarea id="description" name="description" rows="3"
                      placeholder="What does this team work on?"
                      class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary resize-none"></textarea>
        </div>

        <div class="bg-gray-900/50 rounded-lg p-4">
            <h4 class="text-sm font-medium text-white mb-2">What you can do with teams:</h4>
            <ul class="text-sm text-gray-400 space-y-1">
                <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Invite team members with different roles
                </li>
                <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Share projects with your team
                </li>
                <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Control who can deploy and manage projects
                </li>
            </ul>
        </div>

        <div class="pt-4 border-t border-gray-700">
            <button type="submit" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create Team
            </button>
        </div>
    </form>
</div>
{% endblock %}
