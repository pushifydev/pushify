{% extends 'dashboard/base.html.twig' %}

{% block title %}Preview Deployments - Pushify{% endblock %}
{% block page_title %}Preview Deployments{% endblock %}
{% block page_subtitle %}Preview deployments for your pull requests{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        {% set activeCount = previews|filter(p => p.status == 'active')|length %}
        {% set buildingCount = previews|filter(p => p.status in ['pending', 'building', 'deploying'])|length %}
        {% set failedCount = previews|filter(p => p.status == 'failed')|length %}
        {% set totalCount = previews|length %}

        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ activeCount }}</p>
                    <p class="text-sm text-gray-400">Active</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-yellow-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-yellow-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ buildingCount }}</p>
                    <p class="text-sm text-gray-400">Building</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ failedCount }}</p>
                    <p class="text-sm text-gray-400">Failed</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-2xl font-bold text-white">{{ totalCount }}</p>
                    <p class="text-sm text-gray-400">Total</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Previews List -->
    {% if previews|length > 0 %}
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700/50">
            <h3 class="text-lg font-semibold text-white">All Preview Deployments</h3>
        </div>
        <div class="divide-y divide-gray-700/50">
            {% for preview in previews %}
            <div class="p-4 hover:bg-gray-700/30 transition-colors">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
                            </svg>
                        </div>
                        <div>
                            <div class="flex items-center gap-2">
                                <a href="{{ path('app_preview_show', {id: preview.id}) }}" class="text-white font-medium hover:text-primary">
                                    PR #{{ preview.prNumber }}
                                </a>
                                <span class="px-2 py-0.5 text-xs rounded-full {{ preview.statusBadgeClass }}">
                                    {{ preview.statusLabel }}
                                </span>
                            </div>
                            <p class="text-sm text-gray-400">{{ preview.prTitle|length > 60 ? preview.prTitle|slice(0, 60) ~ '...' : preview.prTitle }}</p>
                            <div class="flex items-center gap-3 mt-1 text-xs text-gray-500">
                                <span>{{ preview.project.name }}</span>
                                <span>{{ preview.branch }}</span>
                                {% if preview.shortCommitHash %}
                                <span>{{ preview.shortCommitHash }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        {% if preview.isActive and preview.previewUrl %}
                        <a href="{{ preview.previewUrl }}" target="_blank" class="px-3 py-1.5 bg-green-500/20 hover:bg-green-500/30 text-green-400 text-sm font-medium rounded-lg transition-colors inline-flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            Visit
                        </a>
                        {% endif %}
                        <a href="{{ path('app_preview_show', {id: preview.id}) }}" class="px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors">
                            Details
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% else %}
    <!-- Empty State -->
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-12 text-center">
        <div class="w-16 h-16 bg-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-white mb-2">No Preview Deployments</h3>
        <p class="text-gray-400 mb-6 max-w-md mx-auto">
            Preview deployments are automatically created when pull requests are opened on projects with preview deployments enabled.
        </p>
        <div class="bg-gray-900/50 rounded-lg p-4 max-w-lg mx-auto text-left">
            <h4 class="text-sm font-medium text-white mb-2">How to enable:</h4>
            <ol class="text-sm text-gray-400 space-y-1 list-decimal list-inside">
                <li>Go to your project settings</li>
                <li>Enable "Preview Deployments"</li>
                <li>Open a pull request on your repository</li>
                <li>A preview will be automatically deployed</li>
            </ol>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
