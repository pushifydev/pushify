{% extends 'dashboard/base.html.twig' %}

{% block title %}PR #{{ preview.prNumber }} - Preview - Pushify{% endblock %}
{% block page_title %}PR #{{ preview.prNumber }}{% endblock %}
{% block page_subtitle %}{{ preview.prTitle }}{% endblock %}

{% block topbar_actions %}
<div class="flex items-center gap-2">
    {% if preview.isActive and preview.previewUrl %}
    <a href="{{ preview.previewUrl }}" target="_blank" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
        Visit Preview
    </a>
    {% endif %}
    <a href="{{ path('app_previews_index') }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
    </a>
</div>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Status Banner -->
    {% if preview.isRunning %}
    <div class="bg-yellow-500/10 border border-yellow-500/30 rounded-xl p-4 flex items-center gap-3">
        <svg class="w-5 h-5 text-yellow-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        <span class="text-yellow-400">{{ preview.statusLabel }}...</span>
    </div>
    {% elseif preview.isFailed %}
    <div class="bg-red-500/10 border border-red-500/30 rounded-xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-red-400 font-medium">Deployment Failed</span>
        </div>
        {% if preview.errorMessage %}
        <p class="text-red-300 text-sm">{{ preview.errorMessage }}</p>
        {% endif %}
    </div>
    {% elseif preview.isActive %}
    <div class="bg-green-500/10 border border-green-500/30 rounded-xl p-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-green-400">Preview is live!</span>
        </div>
        {% if preview.previewUrl %}
        <a href="{{ preview.previewUrl }}" target="_blank" class="text-green-400 hover:underline">{{ preview.previewUrl }}</a>
        {% endif %}
    </div>
    {% endif %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- PR Details -->
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Pull Request Details</h3>
                <dl class="grid grid-cols-2 gap-4">
                    <div>
                        <dt class="text-sm text-gray-400">PR Number</dt>
                        <dd class="text-white font-medium">#{{ preview.prNumber }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-gray-400">Branch</dt>
                        <dd class="text-white font-medium">{{ preview.branch }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-gray-400">Author</dt>
                        <dd class="text-white font-medium">{{ preview.prAuthor ?? 'Unknown' }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-gray-400">Commit</dt>
                        <dd class="text-white font-mono">{{ preview.shortCommitHash ?? 'N/A' }}</dd>
                    </div>
                    <div class="col-span-2">
                        <dt class="text-sm text-gray-400">Title</dt>
                        <dd class="text-white">{{ preview.prTitle }}</dd>
                    </div>
                    {% if preview.commitMessage %}
                    <div class="col-span-2">
                        <dt class="text-sm text-gray-400">Commit Message</dt>
                        <dd class="text-gray-300 text-sm">{{ preview.commitMessage }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>

            <!-- Build Log -->
            {% if preview.buildLog %}
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Build Log</h3>
                <pre class="bg-gray-900 rounded-lg p-4 overflow-x-auto text-sm text-gray-300 font-mono max-h-96 overflow-y-auto">{{ preview.buildLog }}</pre>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Status Card -->
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Status</h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Status</span>
                        <span class="px-2.5 py-1 text-sm rounded-full {{ preview.statusBadgeClass }}">
                            {{ preview.statusLabel }}
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Project</span>
                        <a href="{{ path('app_project_show', {slug: preview.project.slug}) }}" class="text-white hover:text-primary">
                            {{ preview.project.name }}
                        </a>
                    </div>
                    {% if preview.subdomain %}
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Subdomain</span>
                        <span class="text-white font-mono text-sm">{{ preview.subdomain }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Timestamps -->
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Timeline</h3>
                <div class="space-y-3 text-sm">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Created</span>
                        <span class="text-white">{{ preview.createdAt|date('M d, Y H:i') }}</span>
                    </div>
                    {% if preview.deployedAt %}
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Deployed</span>
                        <span class="text-white">{{ preview.deployedAt|date('M d, Y H:i') }}</span>
                    </div>
                    {% endif %}
                    {% if preview.updatedAt %}
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Updated</span>
                        <span class="text-white">{{ preview.updatedAt|date('M d, Y H:i') }}</span>
                    </div>
                    {% endif %}
                    {% if preview.destroyedAt %}
                    <div class="flex items-center justify-between">
                        <span class="text-gray-400">Destroyed</span>
                        <span class="text-white">{{ preview.destroyedAt|date('M d, Y H:i') }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Actions -->
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-white mb-4">Actions</h3>
                <div class="space-y-2">
                    {% if preview.isFailed or preview.isActive %}
                    <form method="post" action="{{ path('app_preview_rebuild', {id: preview.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('rebuild-preview-' ~ preview.id) }}">
                        <button type="submit" class="w-full px-4 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 font-medium rounded-lg transition-colors">
                            Rebuild
                        </button>
                    </form>
                    {% endif %}

                    {% if not preview.isDestroyed %}
                    <form method="post" action="{{ path('app_preview_destroy', {id: preview.id}) }}"
                          onsubmit="return confirm('Are you sure you want to destroy this preview?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('destroy-preview-' ~ preview.id) }}">
                        <button type="submit" class="w-full px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 font-medium rounded-lg transition-colors">
                            Destroy Preview
                        </button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
