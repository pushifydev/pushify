{% extends 'dashboard/base.html.twig' %}

{% block title %}Logs - Pushify{% endblock %}
{% block page_title %}Logs{% endblock %}
{% block page_subtitle %}View application and deployment logs{% endblock %}

{% block content %}
<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
	<div class="p-12 text-center">
		<div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gray-500/20 flex items-center justify-center">
			<svg class="w-10 h-10 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
			</svg>
		</div>
		<h3 class="text-xl font-semibold text-white mb-2">No logs available</h3>
		<p class="text-gray-400 mb-8 max-w-md mx-auto">Logs will be available once you have active projects and deployments.</p>
		<a href="{{ path('app_projects') }}" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
			View Projects
		</a>
	</div>
</div>
{% endblock %}
