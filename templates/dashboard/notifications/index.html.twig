{% extends 'dashboard/base.html.twig' %}

{% block title %}Notifications - Pushify{% endblock %}
{% block page_title %}Notifications{% endblock %}
{% block page_subtitle %}Stay updated on your deployments{% endblock %}

{% block topbar_actions %}
<div class="flex items-center gap-3">
    {% if unreadCount > 0 %}
    <form method="post" action="{{ path('app_notifications_read_all') }}">
        <button type="submit" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Mark All Read
        </button>
    </form>
    {% endif %}
    <a href="{{ path('app_notifications_settings') }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Settings
    </a>
</div>
{% endblock %}

{% block content %}
<div class="max-w-4xl space-y-6">
    {% if notifications is empty %}
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-12 text-center">
        <div class="w-16 h-16 bg-gray-700/50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2">No notifications yet</h3>
        <p class="text-gray-400">You'll see deployment updates and alerts here</p>
    </div>
    {% else %}
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
        <div class="divide-y divide-gray-700/50">
            {% for notification in notifications %}
            <div class="p-4 hover:bg-gray-700/20 transition-colors {{ not notification.isRead ? 'bg-primary/5' : '' }}" data-notification-id="{{ notification.id }}">
                <div class="flex items-start gap-4">
                    <!-- Icon -->
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 {{ notification.typeBadgeClass }}">
                        {% if notification.type == 'deployment_success' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        {% elseif notification.type == 'deployment_failed' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        {% elseif notification.type == 'deployment_started' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        {% elseif notification.type == 'server_offline' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        {% else %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                        {% endif %}
                    </div>

                    <!-- Content -->
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between gap-2">
                            <h4 class="font-medium text-white {{ not notification.isRead ? '' : 'text-gray-300' }}">
                                {{ notification.title }}
                            </h4>
                            <span class="text-xs text-gray-500 flex-shrink-0">{{ notification.timeAgo }}</span>
                        </div>
                        <p class="text-sm text-gray-400 mt-1">{{ notification.message }}</p>
                        {% if notification.actionUrl %}
                        <a href="{{ notification.actionUrl }}" class="inline-flex items-center gap-1 text-sm text-primary hover:text-primary/80 mt-2">
                            {{ notification.actionLabel ?? 'View Details' }}
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                        {% endif %}
                    </div>

                    <!-- Unread indicator -->
                    {% if not notification.isRead %}
                    <div class="w-2 h-2 bg-primary rounded-full flex-shrink-0 mt-2"></div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
