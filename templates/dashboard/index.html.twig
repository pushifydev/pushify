{% extends 'dashboard/base.html.twig' %}

{% block title %}Dashboard - Pushify
{% endblock %}

{% block page_title %}Dashboard
{% endblock %}
{% block page_subtitle %}Welcome back,
	{{ app.user.name|split(' ')[0] }}
{% endblock %}

{% block content %}
	<!-- Quick Stats -->
	<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
		<a href={{ path('app_projects') }} class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-gray-600 transition-colors cursor-pointer">
			<div class="flex items-center justify-between mb-4">
				<span class="text-gray-400 text-sm">Total Projects</span>
				<div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
					</svg>
				</div>
			</div>
			<p class="text-3xl font-bold text-white">0</p>
			<p class="text-xs text-gray-500 mt-1">No projects yet</p>
		</a>
		<a href={{ path('app_servers') }} class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-gray-600 transition-colors cursor-pointer">
			<div class="flex items-center justify-between mb-4">
				<span class="text-gray-400 text-sm">Active Servers</span>
				<div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"></path>
					</svg>
				</div>
			</div>
			<p class="text-3xl font-bold text-white">0</p>
			<p class="text-xs text-gray-500 mt-1">Connect a server</p>
		</a>
		<a href={{ path('app_deployments') }} class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-gray-600 transition-colors cursor-pointer">
			<div class="flex items-center justify-between mb-4">
				<span class="text-gray-400 text-sm">Deployments</span>
				<div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
					</svg>
				</div>
			</div>
			<p class="text-3xl font-bold text-white">0</p>
			<p class="text-xs text-gray-500 mt-1">This month</p>
		</a>
		<a href={{ path('app_dashboard_databases') }} class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-gray-600 transition-colors cursor-pointer">
			<div class="flex items-center justify-between mb-4">
				<span class="text-gray-400 text-sm">Databases</span>
				<div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
					</svg>
				</div>
			</div>
			<p class="text-3xl font-bold text-white">0</p>
			<p class="text-xs text-gray-500 mt-1">No databases</p>
		</a>
	</div>

	<!-- Recent Projects Section -->
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
		<div class="flex items-center justify-between p-6 border-b border-gray-700/50">
			<h2 class="text-lg font-semibold text-white">Recent Projects</h2>
			<a href="{{ path('app_projects') }}" class="text-sm text-primary hover:text-primary/80 transition-colors">View all</a>
		</div>

		<!-- Empty State -->
		<div class="p-12 text-center">
			<div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gray-700/30 flex items-center justify-center">
				<svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
				</svg>
			</div>
			<h3 class="text-xl font-semibold text-white mb-2">No projects yet</h3>
			<p class="text-gray-400 mb-8 max-w-md mx-auto">Get started by creating your first project. Connect a Git repository and deploy your application in seconds.</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="{{ path('app_project_new') }}" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all hover:scale-105 inline-flex items-center justify-center gap-2">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
					</svg>
					Create New Project
				</a>
				<a href="{{ path('app_project_new') }}" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-lg transition-colors inline-flex items-center justify-center gap-2">
					<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					Import from GitHub
				</a>
			</div>
		</div>
	</div>

	<!-- Quick Actions -->
	<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
		<a href="{{ path('app_servers') }}" class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-primary/30 transition-colors group">
			<div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center mb-4 group-hover:bg-blue-500/30 transition-colors">
				<svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"></path>
				</svg>
			</div>
			<h3 class="font-semibold text-white mb-2">Connect Server</h3>
			<p class="text-sm text-gray-400">Add your first server to start deploying applications.</p>
		</a>
		<a href="{{ path('app_dashboard_databases') }}" class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-primary/30 transition-colors group">
			<div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center mb-4 group-hover:bg-green-500/30 transition-colors">
				<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
				</svg>
			</div>
			<h3 class="font-semibold text-white mb-2">Create Database</h3>
			<p class="text-sm text-gray-400">Deploy PostgreSQL, MySQL, MongoDB, or Redis.</p>
		</a>
		<a href="/docs" class="p-6 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-primary/30 transition-colors group">
			<div class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center mb-4 group-hover:bg-purple-500/30 transition-colors">
				<svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
				</svg>
			</div>
			<h3 class="font-semibold text-white mb-2">Read Docs</h3>
			<p class="text-sm text-gray-400">Learn how to deploy and manage your applications.</p>
		</a>
	</div>
{% endblock %}
