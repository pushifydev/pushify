{% extends 'dashboard/base.html.twig' %}

{% block title %}Activity - {{ project.name }} - Pushify{% endblock %}
{% block page_title %}Project Activity{% endblock %}

{% block topbar_actions %}
<a href="{{ path('app_project_show', {slug: project.slug}) }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Project
</a>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Project Header -->
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-xl font-semibold text-white">{{ project.name }}</h2>
                <p class="text-gray-400">Activity history for this project</p>
            </div>
        </div>
    </div>

    <!-- Activity List -->
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700/50">
            <h3 class="text-lg font-semibold text-white">All Activity</h3>
            <p class="text-sm text-gray-400">{{ activities|length }} events</p>
        </div>

        {% if activities is empty %}
        <div class="text-center py-12 text-gray-400">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p>No activity recorded for this project yet</p>
        </div>
        {% else %}
        <div class="divide-y divide-gray-700/50">
            {% for activity in activities %}
            <div class="px-6 py-4 hover:bg-gray-700/20 transition-colors">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0
                        {% if activity.actionColor == 'green' %}bg-green-500/20 text-green-400
                        {% elseif activity.actionColor == 'blue' %}bg-blue-500/20 text-blue-400
                        {% elseif activity.actionColor == 'red' %}bg-red-500/20 text-red-400
                        {% elseif activity.actionColor == 'purple' %}bg-purple-500/20 text-purple-400
                        {% elseif activity.actionColor == 'orange' %}bg-orange-500/20 text-orange-400
                        {% else %}bg-gray-500/20 text-gray-400{% endif %}">
                        {% if activity.actionIcon == 'rocket' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        {% elseif activity.actionIcon == 'arrow-uturn-left' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                        </svg>
                        {% elseif activity.actionIcon == 'pencil' %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                        </svg>
                        {% else %}
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        {% endif %}
                    </div>

                    <div class="flex-1 min-w-0">
                        <p class="text-white">{{ activity.description }}</p>
                        <div class="flex items-center gap-3 mt-1 text-sm text-gray-400">
                            {% if activity.user %}
                            <span>{{ activity.user.email|split('@')[0] }}</span>
                            {% endif %}
                            <span>{{ activity.createdAt|date('M d, Y H:i') }}</span>
                        </div>
                    </div>

                    <span class="px-2 py-1 text-xs rounded-full
                        {% if activity.actionColor == 'green' %}bg-green-500/20 text-green-400
                        {% elseif activity.actionColor == 'purple' %}bg-purple-500/20 text-purple-400
                        {% elseif activity.actionColor == 'orange' %}bg-orange-500/20 text-orange-400
                        {% else %}bg-gray-500/20 text-gray-400{% endif %}">
                        {{ activity.actionLabel }}
                    </span>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
