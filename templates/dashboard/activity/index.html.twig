{% extends 'dashboard/base.html.twig' %}

{% block title %}Activity - Pushify{% endblock %}
{% block page_title %}Activity Feed{% endblock %}

{% block content %}
<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Main Activity Feed -->
    <div class="lg:col-span-3 space-y-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">{{ stats.deploy|default(0) }}</p>
                        <p class="text-xs text-gray-400">Deployments</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">{{ stats.create|default(0) }}</p>
                        <p class="text-xs text-gray-400">Created</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">{{ stats.update|default(0) }}</p>
                        <p class="text-xs text-gray-400">Updates</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">{{ stats.rollback|default(0) }}</p>
                        <p class="text-xs text-gray-400">Rollbacks</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity List -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-700/50">
                <h3 class="text-lg font-semibold text-white">Recent Activity</h3>
                <p class="text-sm text-gray-400">Last 30 days</p>
            </div>

            {% if activities is empty %}
            <div class="text-center py-12 text-gray-400">
                <svg class="w-12 h-12 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p>No activity yet</p>
                <p class="text-sm mt-1">Your activity will appear here</p>
            </div>
            {% else %}
            <div class="divide-y divide-gray-700/50">
                {% for activity in activities %}
                <div class="px-6 py-4 hover:bg-gray-700/20 transition-colors">
                    <div class="flex items-start gap-4">
                        <!-- Icon -->
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0
                            {% if activity.actionColor == 'green' %}bg-green-500/20 text-green-400
                            {% elseif activity.actionColor == 'blue' %}bg-blue-500/20 text-blue-400
                            {% elseif activity.actionColor == 'red' %}bg-red-500/20 text-red-400
                            {% elseif activity.actionColor == 'purple' %}bg-purple-500/20 text-purple-400
                            {% elseif activity.actionColor == 'orange' %}bg-orange-500/20 text-orange-400
                            {% elseif activity.actionColor == 'indigo' %}bg-indigo-500/20 text-indigo-400
                            {% elseif activity.actionColor == 'cyan' %}bg-cyan-500/20 text-cyan-400
                            {% elseif activity.actionColor == 'yellow' %}bg-yellow-500/20 text-yellow-400
                            {% else %}bg-gray-500/20 text-gray-400{% endif %}">
                            {% if activity.actionIcon == 'plus-circle' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'pencil' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'trash' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'rocket' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'arrow-uturn-left' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'envelope' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'user-plus' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'server' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'globe-alt' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                            </svg>
                            {% elseif activity.actionIcon == 'lock-closed' %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            {% else %}
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            {% endif %}
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                            <p class="text-white">{{ activity.description }}</p>
                            <div class="flex items-center gap-3 mt-1 text-sm text-gray-400">
                                {% if activity.user %}
                                <span class="flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    {{ activity.user.email|split('@')[0] }}
                                </span>
                                {% endif %}
                                {% if activity.project %}
                                <span class="flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                                    </svg>
                                    {{ activity.project.name }}
                                </span>
                                {% endif %}
                                <span>{{ activity.timeAgo }}</span>
                            </div>
                        </div>

                        <!-- Entity Badge -->
                        {% if activity.entityType %}
                        <span class="px-2 py-1 text-xs rounded-full bg-gray-700/50 text-gray-400">
                            {{ activity.entityTypeLabel }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% if hasMore or page > 1 %}
            <div class="px-6 py-4 border-t border-gray-700/50 flex justify-between">
                {% if page > 1 %}
                <a href="{{ path('app_activity', {page: page - 1}) }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition">
                    Previous
                </a>
                {% else %}
                <div></div>
                {% endif %}

                {% if hasMore %}
                <a href="{{ path('app_activity', {page: page + 1}) }}" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition">
                    Next
                </a>
                {% endif %}
            </div>
            {% endif %}
            {% endif %}
        </div>
    </div>

    <!-- Sidebar - Timeline -->
    <div class="space-y-6">
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
            <div class="px-4 py-3 border-b border-gray-700/50">
                <h4 class="font-semibold text-white">This Week</h4>
            </div>
            <div class="p-4">
                {% if timeline is empty %}
                <p class="text-sm text-gray-400">No activity this week</p>
                {% else %}
                <div class="space-y-4">
                    {% for date, dayActivities in timeline %}
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase mb-2">
                            {% if date == "now"|date('Y-m-d') %}
                                Today
                            {% elseif date == ("now"|date_modify("-1 day"))|date('Y-m-d') %}
                                Yesterday
                            {% else %}
                                {{ date|date('l') }}
                            {% endif %}
                        </p>
                        <div class="space-y-2">
                            {% for activity in dayActivities|slice(0, 3) %}
                            <div class="flex items-center gap-2 text-sm">
                                <div class="w-2 h-2 rounded-full
                                    {% if activity.actionColor == 'green' %}bg-green-400
                                    {% elseif activity.actionColor == 'blue' %}bg-blue-400
                                    {% elseif activity.actionColor == 'red' %}bg-red-400
                                    {% elseif activity.actionColor == 'purple' %}bg-purple-400
                                    {% elseif activity.actionColor == 'orange' %}bg-orange-400
                                    {% else %}bg-gray-400{% endif %}"></div>
                                <span class="text-gray-300 truncate">{{ activity.actionLabel }}</span>
                            </div>
                            {% endfor %}
                            {% if dayActivities|length > 3 %}
                            <p class="text-xs text-gray-500 pl-4">+{{ dayActivities|length - 3 }} more</p>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-4">
            <h4 class="font-semibold text-white mb-3">Activity by Type</h4>
            <div class="space-y-2">
                {% for action, count in stats %}
                <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-400 capitalize">{{ action|replace({'_': ' '}) }}</span>
                    <span class="text-white font-medium">{{ count }}</span>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
