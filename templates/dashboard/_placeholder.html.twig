{# Reusable placeholder component for coming soon pages #}
<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl">
	<div class="p-12 text-center">
		<div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-{{ icon_color|default('gray') }}-500/20 flex items-center justify-center">
			{% block placeholder_icon %}
				<svg class="w-10 h-10 text-{{ icon_color|default('gray') }}-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
				</svg>
			{% endblock %}
		</div>
		<h3 class="text-xl font-semibold text-white mb-2">{{ title|default('Coming Soon') }}</h3>
		<p class="text-gray-400 mb-8 max-w-md mx-auto">{{ description|default('This feature is under development.') }}</p>
		{% if action_url is defined and action_text is defined %}
			<a href="{{ action_url }}" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
				{% if action_icon is defined %}
					{{ action_icon|raw }}
				{% endif %}
				{{ action_text }}
			</a>
		{% endif %}
	</div>
</div>
