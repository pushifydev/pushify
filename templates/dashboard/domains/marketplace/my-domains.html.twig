{% extends 'dashboard/base.html.twig' %}

{% block title %}My Domains - Pushify{% endblock %}
{% block page_title %}My Domains{% endblock %}
{% block page_subtitle %}Manage your registered domains{% endblock %}

{% block topbar_actions %}
<a href="{{ path('app_domain_marketplace') }}" class="px-4 py-2 bg-primary hover:bg-primary/90 text-white font-medium rounded-lg transition-all inline-flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
    Register New Domain
</a>
{% endblock %}

{% block content %}
<div class="space-y-6">
    {% if domains is empty %}
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-12 text-center">
        <div class="w-16 h-16 bg-gray-700/50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2">No domains yet</h3>
        <p class="text-gray-400 mb-6">Register your first domain to get started</p>
        <a href="{{ path('app_domain_marketplace') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            Search Domains
        </a>
    </div>
    {% else %}
    <div class="bg-gray-800/50 border border-gray-700/50 rounded-xl overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700/50">
            <h3 class="text-lg font-semibold text-white">Registered Domains</h3>
            <p class="text-sm text-gray-400">{{ domains|length }} domain{{ domains|length != 1 ? 's' : '' }}</p>
        </div>

        <div class="divide-y divide-gray-700/50">
            {% for domain in domains %}
            <div class="p-6 hover:bg-gray-700/20 transition-colors">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="font-mono text-lg font-medium text-white">{{ domain.domain }}</p>
                            <div class="flex items-center gap-3 mt-1">
                                {% if domain.expiresAt %}
                                <span class="text-sm {% if domain.daysUntilExpiry < 30 %}text-yellow-400{% else %}text-gray-400{% endif %}">
                                    Expires {{ domain.expiresAt|date('M d, Y') }}
                                    {% if domain.daysUntilExpiry < 30 %}
                                    ({{ domain.daysUntilExpiry }} days)
                                    {% endif %}
                                </span>
                                {% endif %}
                                {% if domain.project %}
                                <span class="text-sm text-primary">Connected to {{ domain.project.name }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-2">
                        <a href="{{ path('app_domain_dns', {id: domain.id}) }}"
                           class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors inline-flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            DNS
                        </a>

                        <div x-data="{ open: false }" class="relative">
                            <button @click="open = !open" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors inline-flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                                </svg>
                                Connect
                            </button>

                            <div x-show="open" @click.away="open = false" x-transition
                                 class="absolute right-0 mt-2 w-64 bg-gray-800 border border-gray-700 rounded-xl shadow-xl z-10">
                                <div class="p-3 border-b border-gray-700">
                                    <p class="text-sm font-medium text-white">Connect to Project</p>
                                </div>
                                <div class="p-2 max-h-48 overflow-y-auto">
                                    {% for project in projects %}
                                    <form method="post" action="{{ path('app_domain_connect_project', {id: domain.id}) }}" class="block">
                                        <input type="hidden" name="project_id" value="{{ project.id }}">
                                        <button type="submit" class="w-full px-3 py-2 text-left text-sm text-gray-300 hover:bg-gray-700 rounded-lg transition-colors flex items-center gap-2 {{ domain.project and domain.project.id == project.id ? 'bg-primary/20 text-primary' : '' }}">
                                            {% if domain.project and domain.project.id == project.id %}
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            {% endif %}
                                            {{ project.name }}
                                        </button>
                                    </form>
                                    {% endfor %}
                                    {% if domain.project %}
                                    <form method="post" action="{{ path('app_domain_connect_project', {id: domain.id}) }}" class="block border-t border-gray-700 mt-2 pt-2">
                                        <input type="hidden" name="project_id" value="">
                                        <button type="submit" class="w-full px-3 py-2 text-left text-sm text-red-400 hover:bg-red-500/10 rounded-lg transition-colors">
                                            Disconnect
                                        </button>
                                    </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
