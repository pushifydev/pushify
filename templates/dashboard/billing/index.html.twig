{% extends 'dashboard/base.html.twig' %}

{% block title %}Billing - Pushify{% endblock %}
{% block page_title %}Billing{% endblock %}
{% block page_subtitle %}Manage your subscription and billing{% endblock %}

{% block content %}
<div class="max-w-5xl mx-auto space-y-6">
	{# Success Messages #}
	{% for message in app.flashes('success') %}
	<div class="bg-green-500/10 border border-green-500/30 rounded-xl p-6 flash-message">
		<div class="flex items-start gap-4">
			<div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
				<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
				</svg>
			</div>
			<div class="flex-1">
				<h3 class="text-lg font-semibold text-green-400 mb-1">Success!</h3>
				<p class="text-green-300">{{ message }}</p>
			</div>
		</div>
	</div>
	{% endfor %}

	{# Error Messages #}
	{% for message in app.flashes('error') %}
	<div class="bg-red-500/10 border border-red-500/30 rounded-xl p-6 flash-message">
		<div class="flex items-start gap-4">
			<div class="w-12 h-12 bg-red-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
				<svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</div>
			<div class="flex-1">
				<h3 class="text-lg font-semibold text-red-400 mb-1">Error!</h3>
				<p class="text-red-300">{{ message }}</p>
			</div>
		</div>
	</div>
	{% endfor %}

	{# Payment Success #}
	{% if app.request.get('success') %}
	<div class="bg-green-500/10 border border-green-500/30 rounded-xl p-6 flash-message">
		<div class="flex items-start gap-4">
			<div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
				<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
				</svg>
			</div>
			<div class="flex-1">
				<h3 class="text-lg font-semibold text-green-400 mb-1">Payment Successful!</h3>
				<p class="text-green-300">Your subscription is now active. You can start creating servers.</p>
			</div>
		</div>
	</div>
	{% endif %}

	{% if subscription %}
	<!-- Active Subscription -->
	<div class="bg-gradient-to-br from-primary/20 to-purple-500/20 border border-primary/50 rounded-xl p-6">
		<div class="flex items-start justify-between mb-6">
			<div>
				<div class="flex items-center gap-2 mb-2">
					<h3 class="text-2xl font-bold text-white">Active Subscription</h3>
					<span class="px-3 py-1 bg-green-500/20 text-green-400 text-xs font-semibold rounded-full uppercase">
						{{ subscription.status }}
					</span>
				</div>
				<p class="text-gray-300">Your subscription is active and ready to use</p>
			</div>
			<div class="text-right">
				<p class="text-3xl font-bold text-primary">€{{ subscription.amount }}</p>
				<p class="text-sm text-gray-400">per month</p>
			</div>
		</div>

		<div class="grid md:grid-cols-3 gap-4 mb-6">
			<div class="p-4 bg-gray-900/50 rounded-lg">
				<p class="text-sm text-gray-400 mb-1">Server Type</p>
				<p class="text-lg font-semibold text-white">
					{% if subscription.metadata.server_type is defined %}
						{{ subscription.metadata.server_type|upper }}
					{% else %}
						Standard
					{% endif %}
				</p>
			</div>
			<div class="p-4 bg-gray-900/50 rounded-lg">
				<p class="text-sm text-gray-400 mb-1">Current Period</p>
				<p class="text-lg font-semibold text-white">
					{{ subscription.currentPeriodStart|date('M d') }} - {{ subscription.currentPeriodEnd|date('M d, Y') }}
				</p>
			</div>
			<div class="p-4 bg-gray-900/50 rounded-lg">
				<p class="text-sm text-gray-400 mb-1">Next Billing</p>
				<p class="text-lg font-semibold text-white">
					{{ subscription.currentPeriodEnd|date('M d, Y') }}
				</p>
			</div>
		</div>

		<div class="flex items-center gap-3 pt-4 border-t border-gray-700/50">
			<a href="{{ path('app_server_new') }}" class="px-6 py-2.5 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
				</svg>
				Create Server
			</a>
			<button onclick="if(confirm('Are you sure you want to cancel your subscription?')) { document.getElementById('cancel-form').submit(); }" class="px-6 py-2.5 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all">
				Cancel Subscription
			</button>
			<form id="cancel-form" action="{{ path('app_billing_cancel') }}" method="POST" class="hidden">
				<input type="hidden" name="_token" value="{{ csrf_token('cancel-subscription') }}">
			</form>
		</div>
	</div>
	{% else %}
	<!-- No Active Subscription -->
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-12 text-center">
		<div class="w-16 h-16 mx-auto mb-4 bg-gray-700/50 rounded-xl flex items-center justify-center">
			<svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
			</svg>
		</div>
		<h3 class="text-lg font-semibold text-white mb-2">No Active Subscription</h3>
		<p class="text-gray-400 mb-6">Subscribe to create and manage servers on Pushify</p>
		<div class="flex items-center justify-center gap-3">
			<a href="{{ path('app_billing_checkout_page', {server_type: 'cx22'}) }}" class="px-8 py-3 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all inline-flex items-center gap-2">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
				</svg>
				Subscribe Now
			</a>
			<a href="{{ path('app_pricing') }}" class="px-8 py-3 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all">
				View Pricing
			</a>
		</div>
	</div>
	{% endif %}

	<!-- Subscription History -->
	{% if subscriptions is not empty %}
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
		<h3 class="text-xl font-semibold text-white mb-4">Subscription History</h3>

		<div class="space-y-3">
			{% for sub in subscriptions %}
			<div class="p-4 bg-gray-900/50 rounded-lg border border-gray-700/50 flex items-center justify-between">
				<div class="flex-1">
					<div class="flex items-center gap-3 mb-1">
						<p class="font-semibold text-white">
							{% if sub.metadata.server_type is defined %}
								{{ sub.metadata.server_type|upper }}
							{% else %}
								Standard Plan
							{% endif %}
						</p>
						<span class="px-2 py-0.5 text-xs rounded-full
							{% if sub.status == 'active' %}
								bg-green-500/20 text-green-400
							{% elseif sub.status == 'cancelled' %}
								bg-red-500/20 text-red-400
							{% else %}
								bg-gray-500/20 text-gray-400
							{% endif %}
						">
							{{ sub.status|capitalize }}
						</span>
					</div>
					<p class="text-sm text-gray-400">
						{{ sub.createdAt|date('M d, Y') }}
						{% if sub.cancelledAt %}
							- Cancelled on {{ sub.cancelledAt|date('M d, Y') }}
						{% endif %}
					</p>
				</div>
				<div class="text-right">
					<p class="text-lg font-bold text-white">€{{ sub.amount }}</p>
					<p class="text-xs text-gray-500">/month</p>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}

	<!-- Billing Information -->
	<div class="bg-gray-800/50 border border-gray-700/50 rounded-xl p-6">
		<h3 class="text-xl font-semibold text-white mb-4">Billing Information</h3>

		<div class="space-y-4">
			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
				</svg>
				<div>
					<p class="text-sm font-medium text-gray-300">Automatic Billing</p>
					<p class="text-sm text-gray-500">Your subscription will automatically renew each month</p>
				</div>
			</div>

			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
				</svg>
				<div>
					<p class="text-sm font-medium text-gray-300">Secure Payments</p>
					<p class="text-sm text-gray-500">All payments are processed securely by iyzico</p>
				</div>
			</div>

			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
				</svg>
				<div>
					<p class="text-sm font-medium text-gray-300">Cancel Anytime</p>
					<p class="text-sm text-gray-500">You can cancel your subscription at any time, no questions asked</p>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
// Auto-dismiss success message after 5 seconds
setTimeout(() => {
	const successAlert = document.querySelector('.bg-green-500\\/10');
	if (successAlert) {
		successAlert.style.transition = 'opacity 0.5s';
		successAlert.style.opacity = '0';
		setTimeout(() => successAlert.remove(), 500);
	}
}, 5000);
</script>
{% endblock %}
