    <!-- CTA -->
    <section class="max-w-4xl mx-auto text-center">
        <div class="p-12 rounded-2xl bg-gradient-to-br from-primary/20 via-purple-500/10 to-transparent border border-primary/30">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Deploy Your Database?</h2>
            <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
                Start with a free trial. Deploy your first managed database in under 2 minutes.
            </p>
            <a href="{{ path('app_register') }}" class="inline-flex items-center gap-2 px-8 py-4 bg-primary hover:bg-primary/90 text-white font-semibold rounded-xl transition-all hover:scale-105 shadow-lg shadow-primary/25">
