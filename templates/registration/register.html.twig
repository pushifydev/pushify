{% extends 'base.html.twig' %}

{% block title %}Create Account - Pushify{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4">
	<div class="w-full max-w-md">
		<!-- Logo -->
		<div class="text-center mb-8">
			<a href="{{ path('app_home') }}" class="text-3xl font-bold text-white">Pushify</a>
			<p class="text-gray-400 mt-2">Create your account</p>
		</div>

		<!-- Registration Card -->
		<div class="bg-gray-800/50 border border-gray-700/50 rounded-2xl p-8">
			{{ form_start(registrationForm, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}

				<!-- Name Field -->
				<div>
					{{ form_label(registrationForm.name) }}
					{{ form_widget(registrationForm.name) }}
					{% if registrationForm.name.vars.errors|length > 0 %}
						<p class="mt-1 text-sm text-red-500">{{ registrationForm.name.vars.errors[0].message }}</p>
					{% endif %}
				</div>

				<!-- Email Field -->
				<div>
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email) }}
					{% if registrationForm.email.vars.errors|length > 0 %}
						<p class="mt-1 text-sm text-red-500">{{ registrationForm.email.vars.errors[0].message }}</p>
					{% endif %}
				</div>

				<!-- Password Field -->
				<div>
					{{ form_label(registrationForm.plainPassword) }}
					{{ form_widget(registrationForm.plainPassword) }}
					{% if registrationForm.plainPassword.vars.errors|length > 0 %}
						<p class="mt-1 text-sm text-red-500">{{ registrationForm.plainPassword.vars.errors[0].message }}</p>
					{% endif %}
				</div>

				<!-- Terms Checkbox -->
				<div class="flex items-start">
					{{ form_widget(registrationForm.agreeTerms) }}
					{{ form_label(registrationForm.agreeTerms) }}
				</div>
				{% if registrationForm.agreeTerms.vars.errors|length > 0 %}
					<p class="text-sm text-red-500">{{ registrationForm.agreeTerms.vars.errors[0].message }}</p>
				{% endif %}

				<!-- Submit Button -->
				<button type="submit" class="w-full py-3 px-4 bg-primary hover:bg-primary/90 text-white font-semibold rounded-lg transition-all hover:scale-[1.02]">
					Create Account
				</button>

			{{ form_end(registrationForm) }}

			<!-- Divider -->
			<div class="relative my-6">
				<div class="absolute inset-0 flex items-center">
					<div class="w-full border-t border-gray-700"></div>
				</div>
				<div class="relative flex justify-center text-sm">
					<span class="px-4 bg-gray-800/50 text-gray-500">or continue with</span>
				</div>
			</div>

			<!-- Social Login Buttons -->
			<div class="space-y-3">
				<a href="{{ path('connect_github_start') }}" class="flex items-center justify-center gap-2 py-3 px-4 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors w-full">
					<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					Continue with GitHub
				</a>
			</div>
		</div>

		<!-- Login Link -->
		<p class="text-center mt-6 text-gray-400">
			Already have an account?
			<a href="{{ path('app_login') }}" class="text-primary hover:text-primary/80 font-medium">Sign in</a>
		</p>
	</div>
</div>
{% endblock %}
