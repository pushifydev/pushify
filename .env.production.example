###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=CHANGE_ME_TO_RANDOM_SECRET
###< symfony/framework-bundle ###

###> symfony/routing ###
# Production domain URL (e.g., https://pushify.com)
DEFAULT_URI=https://your-domain.com
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Production PostgreSQL database
DATABASE_URL="postgresql://db_user:db_password@localhost:5432/pushify_prod?serverVersion=14&charset=utf8"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# Messenger transport - using Doctrine for async processing
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# RabbitMQ for email queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq_user
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_VHOST=/
###< symfony/messenger ###

###> symfony/mailer ###
# Production SMTP (use your email service)
# For Gmail: MAILER_DSN="gmail://username@gmail.com:app_password@default"
# For SendGrid: MAILER_DSN="sendgrid://API_KEY@default"
# For Mailgun: MAILER_DSN="mailgun://API_KEY:DOMAIN@default"
MAILER_DSN="smtp://user:pass@smtp.example.com:587"
###< symfony/mailer ###

###> GitHub OAuth ###
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
###< GitHub OAuth ###

###> Hetzner Cloud API ###
# Get from: https://console.hetzner.cloud/
HETZNER_API_TOKEN=your_hetzner_api_token
###< Hetzner Cloud API ###

###> iyzico Payment Gateway ###
# PRODUCTION credentials from: https://merchant.iyzipay.com/
IYZICO_API_KEY=your_production_api_key
IYZICO_SECRET_KEY=your_production_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com
###< iyzico ###

###> Namecheap Domain API ###
NAMECHEAP_API_USER=your_username
NAMECHEAP_API_KEY=your_api_key
NAMECHEAP_USERNAME=your_username
NAMECHEAP_CLIENT_IP=your_server_ip
NAMECHEAP_SANDBOX=false
###< Namecheap Domain API ###
